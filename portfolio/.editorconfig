root = true

[*]
#estilo básico para todos os arquivos
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{ts,tsx,js,jsx}]
#específicas para arquivos TypeScript e React
quote_type = double
insert_final_newline = true
